{
  "name": "use-rtk-slice",
  "version": "1.1.1",
  "description": "⚛️ 🎣 React hook for using Redux Toolkit slices, with zero setup and boilerplate.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "tag": "next"
  },
  "scripts": {
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "npx tsc --noEmit",
    "build": "rm -rf ./dist && tsup",
    "test": "npm run test:vitest && npm run test:jest",
    "test:vitest": "vitest --run --coverage",
    "test:jest": "jest src/test/jest/mockSlice.test.ts --coverage"
  },
  "keywords": [
    "react",
    "redux",
    "redux-toolkit",
    "slice"
  ],
  "homepage": "https://github.com/emseidov/use-rtk-slice",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/emseidov/use-rtk-slice.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./test/jest": {
      "import": {
        "types": "./dist/test/jest/index.d.ts",
        "import": "./dist/test/jest/index.js"
      },
      "require": {
        "types": "./dist/test/jest/index.d.cts",
        "require": "./dist/test/jest/index.cjs"
      }
    },
    "./test/vitest": {
      "import": {
        "types": "./dist/test/vitest/index.d.ts",
        "import": "./dist/test/vitest/index.js"
      }
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "author": "Emrah Seidov",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.27.0",
    "@reduxjs/toolkit": "^2.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.2",
    "babel-jest": "^29.7.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-redux": "^9.2.0",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.7.0",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-redux": "^9.2.0",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "@vitest/coverage-v8": "^3.2.1"
  }
}
